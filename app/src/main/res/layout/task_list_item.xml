<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivGiftList"
        android:layout_width="10dp"
        android:layout_height="91dp"
        android:layout_margin="10dp"
        android:layout_weight="0.5"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.14"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvTaskName"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorDark1"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvTaskAddres"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorDark1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvTaskOffers"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorDark1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvTaskComments"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDark1"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvTaskCost"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDark2"
                android:layout_marginBottom="15dp"
                android:textSize="19sp"/>

            <ImageView
                android:id="@+id/ivTaskStatus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@mipmap/ic_launcher"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>